# Application Configuration
APP_ENV=development
APP_NAME=smart-attendance
LOG_LEVEL=info

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1

# Device Configuration
DEVICE_ID=edge-device-001
DEVICE_MODEL=jetson-nano
DEVICE_LOCATION=lab-entrance

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=smart-attendance
MLFLOW_ARTIFACT_ROOT=./mlruns

# Model Configuration
MODEL_STORE_PATH=./models
MODEL_DOWNLOAD_RETRY=3
MODEL_DOWNLOAD_TIMEOUT=300

# Database Configuration
DB_PATH=./data/attendance.db
DB_ENCRYPTION_KEY=change-me-to-secure-key-32-bytes-long

# RTSP Configuration
RTSP_BUFFER_SIZE=100
RTSP_RECONNECT_DELAY=5
RTSP_MAX_RECONNECT=10

# BAFS Scheduler Configuration
BAFS_MOTION_THRESHOLD=0.3
BAFS_YAW_THRESHOLD=20.0
BAFS_KEYFRAME_INTERVAL=30

# Detection Configuration
DETECTOR_CONFIDENCE_THRESHOLD=0.5
DETECTOR_NMS_THRESHOLD=0.45

# Recognition Configuration
RECOGNITION_THRESHOLD=0.7
EMBEDDING_DIM=512

# Attendance Configuration
ATTENDANCE_MIN_CONFIDENCE=0.75
ATTENDANCE_DEBOUNCE_SECONDS=300

# Security
JWT_SECRET_KEY=change-me-to-secure-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Cloud Sync Configuration
CLOUD_ENDPOINT=https://api.example.com
CLOUD_SYNC_INTERVAL=3600
CLOUD_TLS_CERT=./certs/client.crt
CLOUD_TLS_KEY=./certs/client.key
